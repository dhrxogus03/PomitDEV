{{#if label}}
<label>
    {{> labelWithTooltip}}
    {{~#if customButtons~}}
    <span class="actions">
        {{~#each customButtons~}}
        <button class="btn custom-button" data-custom-button-index="{{@index}}" title="{{toolTip}}">
            <span class="fonticon {{iconClass}}"></span>
        </button>
        {{~/each~}}
    </span>
    {{~/if~}}
</label>
{{/if}}
<div class="input-group-wrapper">
    {{~#if readWrite~}}
    \{{~#if canEdit~}}
    <div class="input-group">
        <span class="input-element">
            <input class="form-control data-entry" type="number-as-text" inputmode="numeric" pattern="[0-9]*"
                value="\{{~ {{name}} ~}}" min="{{minimumValue}}" max="{{maximumValue}}" {{#if integerOnly}}step="1" {{else}}step="any"
                {{/if}} />
            <span>
    </div>
    \{{~else~}}
    <span>\{{~ {{name}} ~}}</span>
    \{{~/if~}}
    {{~else~}}
    <span>\{{~ {{name}} ~}}</span>
    {{/if~}}
</div>